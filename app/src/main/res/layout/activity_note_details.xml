<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="iboutsikas.practical.org.cloudenoteapplication.activities.NoteDetailsActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/date_label"
              android:textStyle="bold"
              android:textSize="26sp"
              android:id="@+id/tv_newnote_date">
    </TextView>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_newnote_date"
              android:id="@+id/tv_notedetails_date">

    </TextView>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textSize="26sp"
              android:text="@string/content_label"
              android:layout_below="@id/tv_notedetails_date"
              android:id="@+id/tv_newnote_content">
    </TextView>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_newnote_content"
              android:singleLine="false"
              android:id="@+id/tv_notedetails_content">

    </TextView>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_notedetails_content"
            android:id="@+id/btn_delete_note"
            android:text="@string/delete_note_button"/>
</RelativeLayout>
